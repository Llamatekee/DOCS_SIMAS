<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<GridPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
         styleClass="wizard-step,wizard-step-full-width" vgap="0" VBox.vgrow="ALWAYS">
    
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    
    <rowConstraints>
        <RowConstraints valignment="TOP" minHeight="80" maxHeight="80" fillHeight="false"/> <!-- Header -->
        <RowConstraints vgrow="ALWAYS" valignment="TOP" fillHeight="true"/> <!-- Content -->
        <RowConstraints valignment="BOTTOM" minHeight="45" maxHeight="45" fillHeight="false"/> <!-- Navigation -->
    </rowConstraints>

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <!-- Header -->
    <Label fx:id="labelHeader" text="Datos de la Gramática" styleClass="wizard-header"
           GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>

    <!-- Content -->
    <VBox spacing="25" GridPane.columnIndex="0" GridPane.rowIndex="1" 
          styleClass="wizard-content" maxHeight="-Infinity" GridPane.halignment="CENTER" alignment="CENTER">
        
        <!-- Nombre Section -->
        <VBox spacing="8" styleClass="field-section" maxWidth="500" alignment="CENTER">
            <Label fx:id="labelNombreSeccion" text="Nombre de la Gramática" styleClass="wizard-section-header"/>
            <TextField fx:id="txtNombre" styleClass="wizard-field" promptText="Ingrese el nombre de la gramática"/>
            <Label fx:id="lblNombreError" styleClass="error-label" 
                   managed="false" visible="false"/>
        </VBox>

        <!-- Descripción Section -->
        <VBox spacing="8" styleClass="field-section" maxWidth="500" alignment="CENTER">
            <Label fx:id="labelDescripcionSeccion" text="Descripción" styleClass="wizard-section-header"/>
            <TextArea fx:id="txtDescripcion" styleClass="wizard-field text-area-field" 
                      promptText="Ingrese una descripción detallada de la gramática"
                      wrapText="true" prefRowCount="3"/>
            <Label fx:id="lblDescripcionError" styleClass="error-label" 
                   managed="false" visible="false"/>
        </VBox>
    </VBox>

    <!-- Navigation -->
    <HBox styleClass="wizard-navigation" GridPane.columnIndex="0" GridPane.rowIndex="2" 
          GridPane.valignment="BOTTOM" spacing="8">
        <Button fx:id="btnCancelar" text="Cancelar" styleClass="button-cancel" 
                onAction="#onBtnCancelarAction">
            <graphic>
                <ImageView fitHeight="14" fitWidth="14" preserveRatio="true">
                    <Image url="@../resources/cancelar.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnPrimero" text="Primero" styleClass="button-next" 
                disable="true">
            <graphic>
                <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                    <Image url="@../resources/primero.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnAnterior" text="Anterior" styleClass="button-next" 
                disable="true">
            <graphic>
                <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                    <Image url="@../resources/anterior.png"/>
                </ImageView>
            </graphic>
        </Button>
                <Button fx:id="btnSiguiente" text="Siguiente" styleClass="button-next"
                onAction="#onBtnSiguienteAction">
            <graphic>
                <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                    <Image url="@../resources/siguiente.png"/>
                </ImageView>
            </graphic>
        </Button>
                <Button fx:id="btnUltimo" text="Último" styleClass="button-next"
                onAction="#onBtnUltimoAction">
            <graphic>
                <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                    <Image url="@../resources/ultimo.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

</GridPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Rectangle?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" 
           stylesheets="@styles2.css"
           styleClass="welcome-screen">
    
    <!-- Fondo con gradiente moderno -->
    <Rectangle styleClass="welcome-background" />
    
    <!-- Contenedor principal -->
    <VBox alignment="CENTER" spacing="30" styleClass="welcome-container">
        
        <!-- Logo con efectos modernos -->
        <ImageView fx:id="logoImage" fitWidth="260" fitHeight="180"
                   styleClass="welcome-logo">
            <Image url="@../resources/logo.png"/>
        </ImageView>
        
        <!-- Título principal -->
        <Label text="SimAS 3.0" styleClass="welcome-title" />
        
        <!-- Subtítulo -->
        <Label text="Simulador de Análisis Sintáctico" styleClass="welcome-subtitle" />
        
        <!-- Información de desarrollo -->
        <VBox alignment="CENTER" spacing="8" styleClass="welcome-info">
            <Label text="Desarrollado por Antonio Llamas García" styleClass="welcome-author" />
            <Label text="Dirigido por Dr. Nicolás Luis Fernández García" styleClass="welcome-director" />
        </VBox>
        
        <!-- Versión -->
        <Label text="Versión 3.0" styleClass="welcome-version" />
        
        <!-- Indicador de carga -->
        <VBox alignment="CENTER" spacing="10" styleClass="welcome-loading">
            <Label text="Iniciando aplicación..." styleClass="welcome-loading-text" />
            <ProgressIndicator styleClass="welcome-progress" />
        </VBox>
        
    </VBox>
    
</StackPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<?import java.net.URL?>
<GridPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
         styleClass="wizard-step" vgap="0">
    
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" minWidth="600" prefWidth="800"/>
    </columnConstraints>
    
    <rowConstraints>
        <RowConstraints valignment="TOP" minHeight="80" maxHeight="80" fillHeight="false"/> <!-- Header -->
        <RowConstraints vgrow="ALWAYS" valignment="TOP" fillHeight="true"/> <!-- Content -->
        <RowConstraints valignment="BOTTOM" minHeight="60" maxHeight="60" fillHeight="false"/> <!-- Navigation -->
    </rowConstraints>

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <!-- Header -->
    <Label fx:id="lblTitulo" text="Conjunto Primero y Siguiente" styleClass="wizard-header"
           GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>

    <!-- Content -->
    <VBox spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="1" 
          styleClass="wizard-content" VBox.vgrow="ALWAYS">
        
        <!-- Tabla Section -->
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <Label fx:id="lblConjuntos" text="Conjuntos de Símbolos" styleClass="wizard-section-header"/>
            <TableView fx:id="tablaConjuntos" VBox.vgrow="ALWAYS" styleClass="wizard-table">
                <columns>
                    <TableColumn fx:id="colSimbolo" text="Símbolo" prefWidth="100">
                        <cellValueFactory>
                            <PropertyValueFactory property="simbolo"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colPrimero" text="Conjunto Primero" prefWidth="250">
                        <cellValueFactory>
                            <PropertyValueFactory property="conjuntoPrimero"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colSiguiente" text="Conjunto Siguiente" prefWidth="250">
                        <cellValueFactory>
                            <PropertyValueFactory property="conjuntoSiguiente"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </VBox>

    <!-- Navigation -->
    <HBox styleClass="wizard-navigation" GridPane.columnIndex="0" GridPane.rowIndex="2" 
          GridPane.valignment="BOTTOM" GridPane.halignment="CENTER">
        <Button fx:id="btnCancelar" text="%button.cancelar" styleClass="button-cancel" 
                onAction="#cancelarSimulacion">
            <graphic>
                <ImageView fitHeight="14" fitWidth="14" preserveRatio="true">
                    <Image url="@../resources/cancelar.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnVisualizarGramatica" text="Gramática" styleClass="button-grammar" 
                onAction="#visualizarGramatica">
            <graphic>
                <ImageView fitHeight="14" fitWidth="14" preserveRatio="true">
                    <Image url="@../resources/icons/book_blue_view.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnPrimero" text="%button.primero" styleClass="button-next" 
                onAction="#handlePrimero">
            <graphic>
                <ImageView fitHeight="14" fitWidth="14" preserveRatio="true">
                    <Image url="@../resources/primero.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnAnterior" text="%button.anterior" styleClass="button-next" 
                onAction="#retrocederPaso">
            <graphic>
                <ImageView fitHeight="14" fitWidth="14" preserveRatio="true">
                    <Image url="@../resources/anterior.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnSiguiente" text="%button.siguiente" styleClass="button-next" 
                onAction="#avanzarPaso">
            <graphic>
                <ImageView fitHeight="14" fitWidth="14" preserveRatio="true">
                    <Image url="@../resources/siguiente.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnUltimo" text="%button.ultimo" styleClass="button-next" 
                onAction="#handleUltimo">
            <graphic>
                <ImageView fitHeight="14" fitWidth="14" preserveRatio="true">
                    <Image url="@../resources/ultimo.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

</GridPane>